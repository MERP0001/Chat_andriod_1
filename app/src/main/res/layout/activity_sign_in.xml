<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:overScrollMode="never"
        android:padding="@dimen/_24ssp"
        android:scrollbars="none"
        tools:context=".activities.ui.SignInActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40ssp"
                android:text="welcome back"
                android:textColor="@color/primary_tex"
                android:textSize="@dimen/_30ssp"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40ssp"
                android:text="Login to continue"
                android:textColor="@color/primary_tex"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"/>
        <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40ssp"
                android:background="@drawable/background_input"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10ssp"
                android:textColor="@color/primary_tex"
                android:textSize="@dimen/_16ssp"/>

        <EditText android:id="@+id/InputPassword"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_20ssp"
                  android:background="@drawable/background_input"
                  android:hint="Password"
                  android:inputType="textPassword"
                  android:padding="@dimen/_10ssp"
                  android:textColor="@color/primary_tex"
                  android:textSize="@dimen/_16ssp"/>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50ssp"
                android:layout_marginTop="@dimen/_20ssp"
                android:text="Sing In"
                android:textColor="@color/primary_tex"
                android:textSize="@dimen/_16ssp"
                app:cornerRadius="@dimen/_10ssp"
                app:backgroundTint="@color/icon_background"
        />
        <TextView
                android:id="@+id/txtCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20ssp"
                android:text="Don't have an account? Sign Up"
                android:textColor="@color/primary_tex"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>